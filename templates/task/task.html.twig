{% extends 'base.html.twig' %}

{% block title %}Tâche{% endblock %}

{% block body %}
    <div class="row mt-5">
       <h2 class="text-center">{{ task.title }}</h2>
        <p>{{ task.description }}</p>
        <div class="row">
            <div class="col-4">
                <p>Fait par : {{ task.user.username }}</p>
            </div>
            <div class="col-4">  <p>A finir avant le :  {{ task.endDate|date("d/m/Y") }}</p></div>
            <div class="col-4">
                <p>
                    {% if task.isDone %}
                        Faite
                    {% else %}
                        à finir
                    {% endif %}
                </p>
            </div>
        </div>
    </div>
{% endblock %}
